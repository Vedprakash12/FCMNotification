<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/lgbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity.RegisterActivity">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appName"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:text="@string/app_name"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:layout_marginTop="22dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:textStyle="bold"
        android:id="@+id/regitertext"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/appName"
        android:layout_marginTop="44dp"
        android:textSize="32sp"
        />
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:progressBarStyleHorizontal"
        android:indeterminate="true"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/regitertext"
        android:id="@+id/profilePic"
        app:shapeAppearanceOverlay="@style/circleImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_profile"/>


    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/profilePic"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        android:layout_marginTop="32dp"
        android:textColorHint="#FFFFFF"
        android:id="@+id/name"
        android:textColor="#FFFFFF"
        android:inputType="textCapWords"
        android:textSize="22sp"
        android:padding="8dp"
        android:background="@drawable/edit_text"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_person_24"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:layout_marginTop="22dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="textEmailAddress"
        android:textSize="22sp"
        android:padding="8dp"
        android:id="@+id/EmailId"
        android:background="@drawable/edit_text"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_email_24"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/EmailId"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:layout_marginTop="22dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="textPassword"
        android:textSize="22sp"
        android:padding="8dp"
        android:id="@+id/password_reg"
        android:background="@drawable/edit_text"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_lock_24"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:padding="4dp"
        android:layout_below="@+id/password_reg"
        android:layout_marginTop="44dp"
        android:layout_centerHorizontal="true"
        app:cornerRadius="12dp"
        app:backgroundTint="#B3000000"
        android:text="REGISTER"
        android:id="@+id/registerButton"
        android:textSize="22sp"
        android:textAlignment="center"
        app:strokeWidth="2dp"
        app:strokeColor="#FFFFFF"
        android:fontFamily="@font/poppins"
        app:elevation="12dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerButton"
        android:layout_marginTop="12dp"
        android:text="already have account"
        android:textColor="#FFF"
        android:id="@+id/normalText"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerButton"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/normalText"
        android:text="Login"
        android:textSize="16sp"
        android:id="@+id/loginTextClick"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        />

</RelativeLayout>